@model ICollection<Funeral.App.ViewModels.UserInfoViewModel>
@{
    ViewData["Title"] = "Обща информация за потребителите";
}

<h2>@ViewData["Title"]</h2>
<hr />

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Потребителско име</th>
            <th>И-мейл</th>
            <th>Направени некролози</th>
            <th>Качени снимки</th>
            <th>Покажи некролозите</th>
            <th>Покажи снимките</th>
        </tr>
    </thead>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@user.ObituaryCount</td>
            <td>@user.PicturesCount</td>

            @if (@user.ObituaryCount > 0)
            {
                <td><a asp-controller="Obituary" asp-action="AllUserObituaryAdmin" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info">Некролози на потребителя</a></td>
            }
            else
            {
                <td>Няма некролози за показване</td>
            }

            @if (@user.PicturesCount > 0)
            {
                <td><a asp-controller="UserPictures" asp-action="AllUserPicturesAdmin" asp-route-id="@user.Id" class="btn btn-sm btn-outline-success">Снимки на потребителя</a></td>
            }
            else
            {
                <td>Няма снимки за показване</td>
            }
        </tr>
    }
</table>


