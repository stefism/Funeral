@model ICollection<Funeral.App.ViewModels.UserInfoViewModel>
@{
    ViewData["Title"] = "Обща информация за потребителите";
}

<h2>@ViewData["Title"]</h2>

<hr />

<table id="DataTable" class="table table-striped table-hover">
    <thead class="thead-dark text-center align-content-center">
        <tr>
            <th>Потребителско име</th>
            <th>И-мейл</th>
            <th>Потвърден профил?</th>
            <th>Направени некролози</th>
            <th>Качени снимки</th>
            <th>Некролози на потребителя</th>
            <th>Снимки на потребителя</th>
            <th>Изпрати му поща</th>
        </tr>
    </thead>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Email</td>
            @if (user.IsEmailConfirmed)
            {
                <td class="text-center text-success"><b>Да</b></td>
            }
            else
            {
                <td class="text-center text-danger"><b>Не</b></td>
            }
            <td class="text-center">@user.ObituaryCount</td>
            <td class="text-center">@user.PicturesCount</td>

            @if (@user.ObituaryCount > 0)
            {
                <td><a asp-controller="Obituary" asp-action="AllUserObituaryAdmin" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info text-center"><i class="far fa-address-book"></i> Покажи</a></td>
            }
            else
            {
                <td>Няма</td>
            }

            @if (@user.PicturesCount > 0)
            {
                <td><a asp-controller="UserPictures" asp-action="AllUserPicturesAdmin" asp-route-id="@user.Id" class="btn btn-sm btn-outline-success"><i class="fas fa-grip-horizontal"></i> Покажи</a></td>
            }
            else
            {
                <td>Няма</td>
            }
            <td><a class="btn btn-sm btn-outline-success"><i class="fas fa-envelope-open-text"></i> Напиши</a></td>
        </tr>
    }
</table>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.dataTables.min.js" type="text/javascript"></script>
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script>
        document.get
    </script>

    <script>
        $(document).ready(function () {
            $('#DataTable').DataTable();
        });
    </script>
}