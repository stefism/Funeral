@model ICollection<Funeral.App.ViewModels.UserInfoViewModel>
@{
    ViewData["Title"] = "Обща информация за потребителите";
}

<h2>@ViewData["Title"]</h2>
<hr />

<table class="table table-striped table-hover">
    <tr>
        <th>Потребителско име</th>
        <th>И-мейл</th>
        <th>Направени некролози</th>
        <th>Покажи некролозите</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@user.ObituaryCount</td>

            @if (@user.ObituaryCount > 0)
            {
                <td><a asp-controller="Obituary" asp-action="AllUserObituaryAdmin" asp-route-id="@user.Id" class="btn btn-sm btn-info">Покажи некролозите на потребителя</a></td>
            }
            else
            {
                <td>Няма некролози за показване</td>
            }
        </tr>
    }
</table>


